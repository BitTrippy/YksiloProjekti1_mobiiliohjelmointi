<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YksiloProjekti1.Views.Edit"
             Title="Edit">
    
    <StackLayout Padding="20" Spacing="15">
        
        <Label Text="Response:"
               FontSize="18"
               FontAttributes="Bold" />

        <Entry x:Name="ResponseEntry"
               FontSize="16" />

        <Button Text="Save"
                 />

        <Label Text="Responses:"
               FontSize="18"
               FontAttributes="Bold" />

        <ListView x:Name="ResponsesListTest">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Response}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>